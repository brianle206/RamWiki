
<div>
	<h1>Create Account</h1>
	<form action='/new/account'>
		<input type='hidden' value='authenticity_token' value='<%= form_authenticity_token %>'>
		<label for='first_name'>First Name</label><br>
		<input type="text" placeholder='Enter Your First Name' name='first_name'><br>
		<label for="last_name">Last Name</label><br>
		<input type='text' placeholder='Enter Your Last Name' name='last_name'><br>
		<label for="email">Email</label><br>
		<input type='text' placeholder='Enter Your Email' name='email'><br>
		<label for='password'>Password</label><br>
		<input type='password' name='password' placeholder='Enter a password'><br>
		<label for='confirm'>Confirm Password</label><br>
		<input type='password' name='confirm' placeholder='Enter password again'><br>
		<button class='btn btn-primary'>Create Account</button>
	</form>
</div>